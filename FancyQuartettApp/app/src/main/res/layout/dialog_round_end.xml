<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="3"
    android:minWidth="10000dp"
    android:minHeight="10000dp"
    android:paddingTop="@dimen/dialog_window_padding"
    android:paddingLeft="@dimen/dialog_window_padding"
    android:paddingRight="@dimen/dialog_window_padding">

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardView"
        android:layout_weight="1.25"
        android:elevation="4dp">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/imageView_ImageP1Card"
            android:adjustViewBounds="false"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Playername 1"
                android:id="@+id/textView_P1Name"
                android:textColor="@android:color/white"
                android:layout_marginRight="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="P1CardName"
                android:id="@+id/textView_P1CardName"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="INFO"
            android:id="@+id/textView_InfoP1Card"
            android:layout_gravity="center"
            android:padding="5dp"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:textColor="@android:color/white" />

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:weightSum="3"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="P1Value"
            android:id="@+id/textView_P1Value"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="-50dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Property"
            android:id="@+id/textView_Property"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/primary_dark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="P2Value"
            android:id="@+id/textView_P2Value"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginRight="-50dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardView2"
        android:layout_weight="1.25"
        android:elevation="4dp">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/imageView_ImageP2Card"
            android:adjustViewBounds="false"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:elevation="2dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Playername 2"
                android:id="@+id/textView_P2Name"
                android:textColor="@android:color/white"
                android:layout_marginRight="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="P2CardName"
                android:id="@+id/textView_P2CardName"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="INFO"
            android:id="@+id/textView_InfoP2Card"
            android:layout_gravity="center"
            android:padding="5dp"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:textColor="@android:color/white" />
    </android.support.v7.widget.CardView>

</LinearLayout>
