<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:padding="6dip"
    android:layout_margin="15dip"
    cardview:cardCornerRadius="2dip"
    cardview:cardElevation="2dip"
    cardview:cardBackgroundColor="#E0E0E0"
    android:id="@+id/cardView_card">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relLayout_CardInfo">

            <android.support.v4.view.ViewPager
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:id="@+id/viewPager_SlideShow"
                android:background="@color/colorPrimaryDark" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="CardName"
                android:id="@+id/textView_CardName"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:textAlignment="center" />

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_card_attributes"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>

    </LinearLayout>



</android.support.v7.widget.CardView>
