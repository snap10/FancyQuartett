<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="250dip"
    android:layout_margin="3dip"
    android:padding="6dip"
    android:paddingBottom="0dip"
    cardview:cardElevation="4dip">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/deckicon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:orientation="vertical">

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#aaff9800">

                    <TextView
                        android:id="@+id/deckname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dip"
                        android:text="DeckName"

                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <android.support.v7.view.menu.ListMenuItemView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_more_vert_24dp">

                    </android.support.v7.view.menu.ListMenuItemView>

                    <ImageView
                        android:id="@+id/deck_options_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignWithParentIfMissing="false"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:adjustViewBounds="false"
                        android:padding="10dip"
                        android:src="@drawable/ic_more_vert_24dp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/deckdescription"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="#aaff9800"
                    android:gravity="center"
                    android:padding="5dip"
                    android:text="DeckName"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:visibility="gone" />

            </LinearLayout>
        </RelativeLayout>


    </FrameLayout>

</android.support.v7.widget.CardView>

