<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="250dp"
    android:layout_margin="3dp"
    android:padding="6dp"
    android:paddingBottom="0dp"
    cardview:cardElevation="4dp">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/deckicon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />



            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/downloadIcon"
                android:src="@drawable/ic_file_download_white"
                android:background="@drawable/ovalshapedsackground"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:visibility="gone"

                />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:orientation="vertical">

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/primary_dark_AAopacity">

                    <TextView
                        android:id="@+id/deckname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="DeckName"
                        style="@style/Base.TextAppearance.AppCompat.Medium.Inverse"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:layout_toLeftOf="@+id/deck_options_button"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <ImageButton
                        android:id="@+id/deck_options_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignWithParentIfMissing="false"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:adjustViewBounds="false"
                        android:padding="10dp"
                        android:src="@drawable/ic_more_vert_white"
                        android:background="@null"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/deckdescription"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="#bbff9800"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="DeckName"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:visibility="gone"
                    android:layout_toLeftOf="@+id/deck_options_button"/>

            </LinearLayout>
        </RelativeLayout>


    </FrameLayout>

</android.support.v7.widget.CardView>

