<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:padding="6dp"
    android:layout_margin="3dp"
    cardview:cardCornerRadius="2dp"
    cardview:cardElevation="2dp">
    >

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight">

    <ImageView
        android:id="@+id/deckicon"
        android:layout_width="150dp"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_marginRight="6dp"
        android:contentDescription="TODO"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/deckdescription"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/deckicon"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="Description"
        android:textSize="10sp"
        android:layout_marginRight="40dp" />
    <TextView
        android:id="@+id/deckname"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/deckdescription"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="false"
        android:layout_toRightOf="@id/deckicon"
        android:gravity="center_vertical"
        android:text="Example application"
        android:textSize="14sp"
        android:layout_marginRight="40dp" />
    <ImageButton
        android:id="@+id/deck_options_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_more_vert_primarydark_24dp"
        android:background="@null"
        android:adjustViewBounds="false"
        android:layout_gravity="center"
        android:layout_alignParentRight="true"
        android:layout_alignWithParentIfMissing="false"
        android:layout_centerInParent="true"
        android:padding="10dp" />




</RelativeLayout>
</android.support.v7.widget.CardView>