<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.StartFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView xmlns:cardview="http://schemas.android.com/apk/res-auto"
            android:id="@+id/resumeGameCard"
            android:layout_width="match_parent"

            android:layout_height="0dp"
            android:layout_margin="3dp"
            android:scaleType="centerCrop"
            cardview:cardCornerRadius="8dp"
            cardview:cardElevation="4dp"
            android:layout_weight="0.5">


            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/lastgame_deckicon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_launcher" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:background="@color/background_white_opaque"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/lastgame_deckname"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="@string/nolastGame"
                            android:textColor="@color/primary_text"
                            android:textSize="32dp" />

                        <TextView
                            android:id="@+id/lastgame_deckdescription"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:padding="5dp"
                            android:textColor="@color/primary_text"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/lastgame_lastplayed"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:padding="5dp"
                            android:textColor="@color/primary_text"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/lastgame_ki_level"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:padding="5dp"
                            android:textColor="@color/primary_text"
                            android:textSize="18dp" />
                    </LinearLayout>
                </RelativeLayout>
            </FrameLayout>
        </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginBottom="70dp"
        android:layout_weight="0.5">
        <Button
            android:id="@+id/newSingleplayerButton"
            style="@style/AppTheme.PrimaryDarkButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/newSinglePlayer"
            android:layout_weight="0.5" />

        <Button
            android:id="@+id/newMultiplayerButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:text="@string/newMultiPlayer"
            android:layout_weight="0.5" />


        <Button
            android:id="@+id/newMagicButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:text="@string/newMagicMode"
            android:layout_weight="0.5" />
</LinearLayout>

    </LinearLayout>
</FrameLayout>
