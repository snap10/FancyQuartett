<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView_attr"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    cardview:cardCornerRadius="2dp"
    cardview:cardElevation="2dp"
    cardview:cardBackgroundColor="@color/grey">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="?android:attr/listPreferredItemHeightSmall"
        android:padding="5dp">

        <ImageView
            android:id="@+id/imageView_attrIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@android:drawable/ic_menu_report_image"
            android:layout_alignParentTop="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/textView_attrName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="false"
            android:gravity="center_vertical"
            android:text="AttrName"
            android:textSize="12sp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageView_attrIcon"
            android:layout_toEndOf="@+id/imageView_attrIcon" />

        <ImageView
            android:id="@+id/imageView_attrArrow"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@android:drawable/ic_menu_report_image"
            android:layout_alignParentTop="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout3"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/textView_attrValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AttrValue"
                android:layout_alignBottom="@+id/imageView_attrIcon"
                android:layout_toRightOf="@+id/imageView_attrIcon"
                android:layout_toEndOf="@+id/imageView_attrIcon"
                android:layout_alignParentBottom="false"
                android:layout_centerInParent="true"
                android:layout_marginRight="5dp" />

            <TextView
                android:id="@+id/textView_attrUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AttrUnit"
                android:layout_alignBottom="@+id/imageView_attrIcon"
                android:layout_toRightOf="@+id/textView_attrValue"
                android:layout_toEndOf="@+id/textView_attrValue"
                android:layout_alignParentBottom="false"
                android:layout_centerInParent="true" />
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
