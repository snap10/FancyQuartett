<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView_attr"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dip"
    cardview:cardCornerRadius="2dip"
    cardview:cardElevation="2dip">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:background="#e4e4e4"
        android:padding="5dp">

        <ImageView
            android:id="@+id/imageView_attrIcon"
            android:layout_width="35dip"
            android:layout_height="35dip"
            android:layout_alignLeft="@+id/textView_attrName"
            android:layout_alignStart="@+id/textView_attrName"
            android:layout_below="@+id/textView_attrName"
            android:src="@android:drawable/ic_menu_report_image" />

        <TextView
            android:id="@+id/textView_attrName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignWithParentIfMissing="false"
            android:gravity="center_vertical"
            android:text="AttrName"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView_attrValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AttrValue"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/imageView_attrArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView_attrIcon"
            android:layout_alignRight="@+id/textView_attrName"
            android:src="@android:drawable/ic_menu_report_image" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
