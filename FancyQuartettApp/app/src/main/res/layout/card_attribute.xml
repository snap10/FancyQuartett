<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    cardview:cardBackgroundColor="#000000"
    cardview:cardCornerRadius="0dip"
    android:id="@+id/cardView_attr"
    android:layout_weight="0.5">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:background="#e4e4e4"
        android:layout_margin="1dip"
        android:padding="5dp">

        <ImageView
            android:layout_width="35dip"
            android:layout_height="35dip"
            android:id="@+id/imageView_attrIcon"
            android:src="@android:drawable/ic_menu_report_image"
            android:layout_below="@+id/textView_attrName"
            android:layout_alignLeft="@+id/textView_attrName"
            android:layout_alignStart="@+id/textView_attrName" />

        <TextView
        android:id="@+id/textView_attrName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="false"
        android:gravity="center_vertical"
        android:text="AttrName"
        android:textSize="14sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AttrValue"
            android:id="@+id/textView_attrValue"
            android:layout_alignTop="@+id/imageView_attrArrow"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView_attrArrow"
            android:src="@android:drawable/ic_menu_report_image"
            android:layout_alignBottom="@+id/imageView_attrIcon"
            android:layout_alignRight="@+id/textView_attrName"
            android:layout_alignEnd="@+id/textView_attrName" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
